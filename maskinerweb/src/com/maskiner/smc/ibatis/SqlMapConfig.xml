<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMapConfig
PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<!-- referenciamos a  nuestro pool de conexiones -->
	<transactionManager type="JDBC">
		<dataSource type="JNDI">
			<property name="DataSource" value="java:comp/env/jdbc/mskbd" />
		</dataSource>
	</transactionManager>

	<!-- registramos nuestros SqlMaps.
	 Normalmente por cada entidad tendremos un SqlMap -->

	<sqlMap resource="com/maskiner/smc/ibatis/Actividades.xml"  />
	<sqlMap resource="com/maskiner/smc/ibatis/Herramientas.xml"  />
	<sqlMap resource="com/maskiner/smc/ibatis/Materiales.xml"  />
	<sqlMap resource="com/maskiner/smc/ibatis/Paquetes.xml"  />
	<!-- podemos registrar muchos mas sqlmaps -->

</sqlMapConfig>