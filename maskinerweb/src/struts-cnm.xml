    	</action>
    	
    	
    	<action name="a_cnm_buscarMaquinariaIrPaginaOrigen"
    	        class="com.maskiner.smc.maestromaquinarias.action.MaestroMaquinariasAction"
    	        method="irPaginaOrigen">
