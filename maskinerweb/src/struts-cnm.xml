    		<result type="tiles">d_buscarMaquinaria</result>
    	</action>
    	
    	<action 
    			name="a_cnm_buscarMaquinaria"
    			class="com.maskiner.smc.maestromaquinarias.action.MaestroMaquinariasAction"
    			method="buscarMaquinarias" >
