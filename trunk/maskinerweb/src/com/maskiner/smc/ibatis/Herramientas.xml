<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Herramienta">
<!-- Definimos algunas operaciones basicas para trabajar sobre la entidad cliente -->

<!-- CREAMOS UN ALIAS PARA LA CLASE CLIENTEDTO -->
<typeAlias alias="herramienta" type="com.maskiner.smc.gestionarespertise.bean.HerramientaIbatis" />


	<resultMap 	class="com.maskiner.smc.gestionarespertise.bean.HerramientaIbatis" 	
				id="herramientaResMap"  >
	
		<result property="strCodPaquetexHerram" column="cod_paq"  />
		<result property="strDescripcionHerram" column="cod_herr"  />
		<result property="intCantidadHerramientaxPqte" column="cantidad"  />
		
	</resultMap>	

	<!--  cuando usamos un parameterMap es posible utilizar  
		en la sentencia insert las interrogantes : ?  
	 -->
 
	<parameterMap class="java.util.Map" id="herramientaspMap">
		<parameter property="cod_paq" jdbcType="CHAR" mode="IN"  />
		<parameter property="cod_herr" jdbcType="CHAR" mode="IN" />
		<parameter property="cantidad" jdbcType="INTEGER" mode="IN" />
		
	</parameterMap>



	
	<procedure id="ibatis_spregistraHerramienta" 
					parameterMap="herramientaspMap"	   >
	
		pr_insertarHerramientas_Paquete(?,?,?)
	
	</procedure>	



	

</sqlMap>