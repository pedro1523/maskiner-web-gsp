<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Materiales">
<!-- Definimos algunas operaciones basicas para trabajar sobre la entidad cliente -->

<!-- CREAMOS UN ALIAS PARA LA CLASE CLIENTEDTO -->
<typeAlias alias="materiales" type="com.maskiner.smc.gestionarespertise.bean.MaterialesIbatis" />


	<resultMap 	class="com.maskiner.smc.gestionarespertise.bean.MaterialesIbatis" 	
				id="materialResMap"  >
	
		<result property="strCodMaterial" column="cod_maq"  />
		<result property="strCodPaquetexMat" column="cod_paq"  />
		<result property="intCantidadMat" column="cantidad"  />
		
	</resultMap>	

	<!--  cuando usamos un parameterMap es posible utilizar  
		en la sentencia insert las interrogantes : ?  
	 -->
 
	<parameterMap class="java.util.Map" id="materialspMap">
		<parameter property="cod_maq" jdbcType="CHAR" mode="IN"  />
		<parameter property="cod_paq" jdbcType="CHAR" mode="IN" />
		<parameter property="cantidad" jdbcType="INTEGER" mode="IN" />
	</parameterMap>

	<procedure id="ibatis_spregistraMaterial" 
					parameterMap="materialspMap"	   >
	
		call pr_insertarMateriales_Paquete(?,?,?)
			 	
	</procedure>	
</sqlMap>