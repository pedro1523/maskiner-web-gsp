<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Actividades">
<!-- Definimos algunas operaciones basicas para trabajar sobre la entidad cliente -->

<!-- CREAMOS UN ALIAS PARA LA CLASE CLIENTEDTO -->
<typeAlias alias="actividades" type="com.maskiner.smc.gestionarespertise.bean.ActividadesIbatis" />


	<resultMap 	class="com.maskiner.smc.gestionarespertise.bean.ActividadesIbatis" 	
				id="actividadResMap"  >
	
		<result property="strCodPaquetexAct" column="cod_paq"  />
		<result property="strDescripcionAct" column="num_item"  />
		<result property="intNumItemActxPaquete" column="desc_act"  />
		
	</resultMap>	

	<!--  cuando usamos un parameterMap es posible utilizar  
		en la sentencia insert las interrogantes : ?  
	 -->
 
	<parameterMap class="java.util.Map" id="actividadspMap">
		<parameter property="cod_paq" jdbcType="CHAR" mode="IN"  />
		<parameter property="num_item" jdbcType="INTEGER" mode="IN" />
		<parameter property="desc_act" jdbcType="VARCHAR" mode="IN" />
		
	</parameterMap>



	
	<procedure id="ibatis_spregistraActividad" 
					parameterMap="actividadspMap"	   >
	
		call pr_insertarActividad_Paquete(?,?,?)
			 	
	
	</procedure>	



	

</sqlMap>